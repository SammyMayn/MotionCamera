        <service
            android:name="com.sjm.camera.Camera2Service"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:enabled="true"
            android:exported="true" />


        <activity
            android:name="com.sjm.camera.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sjm.camera.SettingsActivity"
            android:parentActivityName="com.sjm.camera.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sjm.camera.MainActivity" />
        </activity>
