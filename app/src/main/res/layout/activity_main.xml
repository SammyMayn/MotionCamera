<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnExit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:textAlignment="center">

    <TextView
        android:id="@+id/txtSpacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="299dp"
        android:layout_height="66dp"
        android:background="@drawable/button"
        android:text="Re-Scan"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSnapshot"
        android:layout_width="299dp"
        android:layout_height="66dp"
        android:background="@drawable/button"
        android:onClick="takeSnapshot"
        android:text="Start"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="10dp"
        android:indeterminate="true"
        android:visibility="visible" />

    <ListView
        android:id="@+id/lvSources"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#050505"
        android:choiceMode="multipleChoice"
        android:foregroundTint="#00EBDDDD"
        android:scrollbars="horizontal|vertical"
        android:textAlignment="center"
        android:textColor="#00EFFF"
        android:textSize="32sp" />


    <TextView
        android:id="@+id/editTextAddress"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:autofillHints=""
        android:background="#000000"
        android:ems="20"
        android:maxLines="2"
        android:singleLine="false"
        android:text="."
        android:textAlignment="center"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/imgButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/button" />
    <ImageView
        android:id="@+id/imgCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/cloud5" />

    <TextView
        android:id="@+id/bubbleText"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_alignLeft="@+id/lvSources"
        android:layout_alignTop="@+id/lvSources"
        android:layout_alignRight="@+id/lvSources"
        android:layout_alignBottom="@+id/lvSources"
        android:autofillHints=""
        android:background="@drawable/cloud5"
        android:ems="33"
        android:maxLines="3"
        android:paddingTop="50pt"
        android:singleLine="false"
        android:text="TESTING"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif-condensed"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:srcCompat="@drawable/motion_detector_monitor_blue" />

</LinearLayout>
